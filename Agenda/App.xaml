<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Agenda.App">
	<Application.Resources>
		<!-- Application resource dictionary -->
        <ResourceDictionary>
            
           <Color x:Key="ListTextColor">#000000</Color>
            
            <Style x:Key="ListTitleStyle" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="Start" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="TextColor" Value="{DynamicResource ListTextColor}" />
            </Style> 
            
            <Style x:Key="ListDescriptionStyle" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="Start" />
                <Setter Property="VerticalOptions"
                        Value="Start" />
                <Setter Property="TextColor" Value="{DynamicResource ListTextColor}" />
                <Setter Property="Opacity" Value="0.4" />
            </Style>
            
        </ResourceDictionary>
	</Application.Resources>
</Application>
